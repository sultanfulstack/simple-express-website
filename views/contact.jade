extends layout

block content
    .container
        form(method="post",action="contact/send")
            h1 Contact
            .form-group
                label Name
                input.form-control(type="text",name='name',placeholder="Enter your Name")
            .form-group
                label Email
                input.form-control(type="emial",name='email',placeholder="Enter your Emial")
            .form-group
                label Message
                input.form-control(type="text",name='message',placeholder="Enter your message")
                br
                button.btn.btn-primary(type="submit") Submit